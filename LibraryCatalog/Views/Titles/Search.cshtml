@{
  Layout = "_Layout";
}

@using LibraryCatalog.Models;
@model List<LibraryCatalog.Models.Title>

<h2> Search Results</h2>

@if(Model.Count == 0)
{
  <p>No books were found matching this search.</p>
}

<ul>
  @foreach (Title title in Model)
  {
    <li>@Html.ActionLink($"{title.BookName}", "Details", new {id = title.TitleId})</li>
  }
</ul>

<p>@Html.ActionLink("Back to list", "Index")</p>